---
import GitHub from './icons/GitHub.astro'
import Keybase from './icons/Keybase.astro'
import LinkedIn from './icons/LinkedIn.astro'
import Mastodon from './icons/Mastodon.astro'

interface Props {
  class?: string
  copyStart?: number
  copyEnd?: number
}

const {copyStart = 2011, copyEnd = new Date().getUTCFullYear()} = Astro.props

const copyRange = `${copyStart}${copyStart === copyEnd ? '' : `â€“${copyEnd}`}`
---

<footer {...Astro.props}>
  <div class="site">&copy; Aron Griffis {copyRange}</div>
  <div class="social">
    <a href="https://www.linkedin.com/in/agriffis"><LinkedIn /></a>
    <a href="https://mastodon.social/@agriffis"><Mastodon /></a>
    <a href="https://github.com/agriffis"><GitHub /></a>
    <a href="https://keybase.io/agriffis"><Keybase /></a>
  </div>
</footer>

<style>
  footer {
    margin-top: var(--space6);
    padding-top: var(--space1);
    padding-bottom: var(--space8);
    border-top: 3px solid;
    border-top-color: var(--accentColor);
    display: flex;
    justify-content: space-between;
    align-items: start;
    font-family: var(--metaFont);
  }

  .site {
    margin-bottom: var(--space4);
    font-size: var(--metaSmFontSize);
  }

  .social {
    display: flex;
    column-gap: 0.5em;
    :global(svg) {
      width: 20px;
    }
  }
</style>
